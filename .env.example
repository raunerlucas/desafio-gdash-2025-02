# ========================================
# GDASH Weather System Configuration
# ========================================

# Node.js Environment
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DATABASE=gdash
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/gdash?authSource=admin

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_WEATHER_QUEUE=weather_data

# Backend API Configuration
BACKEND_PORT=3000
BACKEND_API_ENDPOINT=/api/weather/logs

# JWT Configuration
JWT_SECRET=gdash-super-secret-jwt-key-2025-change-in-production
JWT_EXPIRATION=7d

# Default Admin User
DEFAULT_USER_EMAIL=admin@gdash.com
DEFAULT_USER_PASSWORD=admin123

# Weather API Configuration (Open-Meteo)
WEATHER_API_KEY=
WEATHER_API_URL=https://api.open-meteo.com/v1/forecast

# Location Configuration (SÃ£o Paulo, Brazil by default)
LOCATION_LATITUDE=-23.5505
LOCATION_LONGITUDE=-46.6333

# Data Collection Configuration
COLLECTION_INTERVAL=3600  # 1 hour in seconds (use 300 for 5 minutes during testing)

# Frontend Configuration
VITE_API_URL=http://localhost:3000

# External APIs
POKEMON_API_URL=https://pokeapi.co/api/v2
